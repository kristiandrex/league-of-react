{
  "env": {
    "node": true,
    "browser": true
  },
  "extends": "next",
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "eol-last": ["error", "always"],
    "no-unused-vars": "error",
    "no-undef": "error",
    "@next/next/no-img-element": "off"
  }
}
